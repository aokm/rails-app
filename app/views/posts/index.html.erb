<h1>Posts#index</h1>

<div>
  <%= form_with url: search_posts_path, method: 'get', local: true do |f| %>
    <%= f.text_field :title, placeholder: 'title search' %>
    <%= f.submit 'search' %>
  <% end %>
</div>

<br />

<table>
  <thead>
      <tr>
        <th>title</th>
        <th>description</th>
        <th>body</th>
      </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.description %></td>
        <td><%= post.body %></td>
      </tr>
    <% end %>
  </tbody>
</table>